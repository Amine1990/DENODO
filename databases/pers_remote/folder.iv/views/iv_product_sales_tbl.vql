CREATE OR REPLACE VIEW iv_product_sales_tbl FOLDER = '/iv' AS SELECT "PRODUCT"."ID" AS "ID", "PRODUCT"."NAME" AS "NAME", "SALES"."DATE_SALE" AS "DATE_SALE", "SALES"."AMOUNT" AS "AMOUNT" FROM "PRODUCT" AS "PRODUCT" INNER JOIN "SALES" AS "SALES" ON "PRODUCT"."ID" = "SALES"."PRODUCT_ID"  ORDER BY "ID" ASC;

